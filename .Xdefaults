!!Appearance
urxvt.termName: rxvt-unicode
urxvt.scrollBar: False
urxvt.depth: 32
urxvt.transparent: true
urxvt.background: rgba:0000/0000/0000/4444
urxvt.foreground: gray
!! Font prefferenes
urxvt.font: xft:Source Code Pro:pixelsize=20,xft:Droid Sans Mono:size=9:style=Regular:antialias=true,xft:文泉驿等宽正黑:size=8:style=Regular:antialias=true
urxvt.boldFont: xft:Source Code Pro:pixelsize=20:weight=bold,xft:Droid Sans Mono:size=9:style=BOld:antialias=true,xft:文泉驿等宽正黑:size=8:style=Bold:antialias=true
urxvt.letterSpace: 0
!! Larger history limit
urxvt.saveLines: 1000000

!! Perl extensions
urxvt.perl-ext-common: default,matcher,font-size,fullscreen
!! Open urls in browser with Control-Click
urxvt.url-launcher: google-chrome-stable
urxvt.matcher.button: C1
!! Change font size on Control-Plus/Minus
urxvt.keysym.Control-0x3d: perl:font-size:increase
urxvt.keysym.Control-0x2d: perl:font-size:decrease
!! Fullscreen switch
urxvt.keysym.F11: perl:fullscreen:switch
!! Input
urxvt.inputMethod: fcitx
urxvt.imLocale: zh_CN.utf8

